package Mento;

public class class1 {
	public static void main(String[] args) {
//		제어문2 3번 문제
		int sum = 0;
		
		for(int i = 1; i <= 100; i++) {
//			sum += i;
			if(i % 2 == 0 ) {
				System.out.println(sum += i);
			}else if(i % 2 != 0 ){
//				System.out.println();
			}
		}System.out.println("짝수만의 합 : " + sum);
		
	}
}
