package review;

	class Animal{
		//필드
		String name;
		int age;
		
		
		//생성자
		public Animal(String name, int age) {
			this.name = name;
			this.age = age;
//			Animal a = new.Animal();
			name = 강아지();
			
			
		}
		void eat(String food){
			System.out.println(name + "이 음식을 먹고있습니다");
		}
		void paly() {
			System.out.println(name + "이 놀고있습니다");
		}
		void sleep() {
			System.out.println();
		}
	}

public class Main {
	public static void main(String[] args) {
		//동물 클래스 작성
		//- Animal 클래스 정의
		//필드 : 이름(name), 나이(age)
		//메소드 : 
		//	eat(String food) 이름이 음식을 먹습니다 출력
		//	play()		 	 이름이 놀고있습니다 출력
		//	sleep()			 이름이 잠을 잡니다 출력
		//	sleep(int time)	 이름이 몇시에 잠을 잡니다 출력
		
		//main 메소드에서 객체 2개를 만들고 모든 메소드 호출하기	
		
		
		
		
	}
}
