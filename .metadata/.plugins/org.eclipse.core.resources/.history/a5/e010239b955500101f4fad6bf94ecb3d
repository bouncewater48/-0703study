package Mento;

import java.util.Random;
import java.util.Scanner;

public class class2 {
	public static void main(String[] args) {
//		제어문2(143p) 4번 문제
//		4.두 개의 주사위가 같은 값이 나올때까지 while문을 사용해 반복하고, 
//		반복 횟수와 주사위 눈의 번호를 출력해보세요
		
//		입력메소드 선언
		Scanner sc = new Scanner(System.in);
		
//		eye 초기화
		int eye = 0;
		Random r1 = new Random();
		Random r2 = new Random();
		
		while(true) {
			if(r1 != r2) {
				System.out.println("두 주사위의 값이 일치하지 않습니다");
			}else if(r1 == r2) {
				System.out.println();
			}
		}
		
		
		
		
		
		
		
		
	}
}
