package Mento;

public class ex2 {
	public static void main(String[] args) {
//		2차원 배열을 이용한 로또 만들기
//		int r1 = (int)((Math.random()*50)+1);
//		int r2 = (int)((Math.random()*50)+1);
		
		int Lotto[] = new int[6];
//		로또번호를 담을 6행 선언
		int R = 0; 
//		R 변수 초기화
		
		while(true) {
			R = (int)(Math.random()*46);
//			Random 실수를 정수로 변환, 최대값을 45로 지정,0부터 시작이라 46으로 작성
//			System.out.printf("%d",Random);
//			1~45 사이로 출력 확인
			if(R == 0) {
				continue;
//			로또번호가 0이 나올경우 무시하고 진행
			}else if(R != 0) {
					break;
				}
		}
		
		
	}
}
