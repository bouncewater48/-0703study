-- 1번 : 조인(외부조인, 교차조인, 셀프조인)

-- 테이블 생성
CREATE TABLE TBL_STUDENT(
	STU_SID NUMBER,
	STU_NAME VARCHAR2(100),
	STU_MAJOR VARCHAR2(100),
	CONSTRAINT PK_STUDENT PRIMARY KEY(STU_SID)
);

