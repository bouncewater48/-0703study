package Mento;

public class class1 {
	public static void main(String[] args) {
//		제어문2(143p) 3번 문제
//		3. 1부터 100까지의 정수 중에서 짝수만ㅇ르 더해 출력하는 코드를 for문을 사용해 작성해보세요.
		
		int sum = 0;
//		sum 값 초기화
		
		for(int i = 1; i <= 100; i++) {
//			int가 100이 될때까지의 합을 구하기
			if(i % 2 == 0 ) {
//				i % 2가 0이 나올때
				System.out.println(sum += i);
//				i를 계속 합산함
			}else if(i % 2 != 0 ){
//				i % 2가 0이 안나올때(=1이 나올때는 합산하지 않음)
//				System.out.println();
			}
		}System.out.println("짝수만의 합 : " + sum);
//		2+4+6+8+10+...+96+98+100
		
	}
}
